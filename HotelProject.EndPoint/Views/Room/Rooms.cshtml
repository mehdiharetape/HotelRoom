@using HotelProject.Application.Services.Rooms.Query.GetRoomsForSite;
@model List<ResultGetRoomsDTO>;
@{
    ViewData["Title"] = "Rooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="living_middle">
    <div class="container">
        <h2 class="title block-title">
            اتاق ها
        </h2>
        @foreach (var item in Model)
        {
            <div class="col-md-4 wow fadeInRight animated" data-wow-delay="0.4s" style="visibility: visible; animation-delay: 0.4s; animation-name: fadeInRight;">
                <div class="living_box">
                    <a href="~/Room/Index/@item.Id">
                        <img src="~/@item.ImageSrc" class="img-responsive" style="height: 220px; width: 330px;" alt="عکس اتاق">
                        <span class="sale-box">
                            <span class="sale-label">
                                 مشاهده
                            </span>
                        </span>
                    </a>
                    <div class="living_desc">
                        <h3>
                            <a href="~/Room/Index/@item.Id">
                                @item.Name
                            </a>
                        </h3>
                        @*<p>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم </p>*@
                        <a href="~/Reservation/CheckReservationDate/@item.Id" class="btn3">
                            رزرو
                        </a>
                        <p class="price">هر شب @item.CostPerNight تومان</p>
                    </div>
                    <table class="propertyDetails" border="1">
                        <tbody>
                            <tr>
                                <td><img src="~/SiteTemplate/images/area.png" alt="" style="margin-left:7px;">@item.Dimension</td>
                                <td><img src="~/SiteTemplate/images/bed.png" alt="" style="margin-left:7px;">@item.BedCount تخت</td>
                                @*<td>
                                    <img src="~/SiteTemplate/images/drop.png" alt="" style="margin-left:7px;">

                                </td>*@
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>

