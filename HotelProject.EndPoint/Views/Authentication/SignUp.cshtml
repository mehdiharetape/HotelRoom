
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/SiteTemplate/css/register.css" rel="stylesheet" />
    <title>ثبت نام در هتل روم</title>
</head>
<body>
    <section class="container">
        <h4>ثبت نام در هتل روم</h4>
        <!-- inputs -->
        <div class="inputs-container">
            <div class="input-field">
                <label for="name">نام</label>
                <input type="text" id="name" class="inps">
            </div>

            <div class="input-field">
                <label for="email">ایمیل</label>
                <input type="email" id="email" class="inps">
            </div>

            <div class="input-field">
                <label for="mobile">شماره موبایل</label>
                <input type="text" id="mobile" class="inps">
            </div>

            <div class="input-field">
                <label for="phone">تلفن ثابت</label>
                <input type="text" id="phone" class="inps">
            </div>

            <div class="input-field">
                <label for="password">رمز عبور</label>
                <input type="password" id="password" class="inps">
            </div>

            <div class="input-field">
                <label for="repassword">تکرار رمز عبور</label>
                <input type="password" id="repassword" class="inps">
            </div>

        </div>

        <!-- buttons -->
        <div class="btn-container">
            <a href="~/Home/Index">بازگشت</a>
            <a id="btn-register" onclick="RegisterUser()" style="cursor: pointer;">ثبت نام</a>
        </div>
    </section>
</body>
</html>
<script src="~/SiteTemplate/js/jquery-1.11.1.min.js"></script>
<script>
    function RegisterUser() {
        var name = $('#name').val();
        var email = $('#email').val();
        var mobile = $('#mobile').val();
        var phone = $('#phone').val();
        var password = $('#password').val();
        var repassword = $('#repassword').val();

        var data = {
            'Name': name,
            'Email': email,
            'Mobile': mobile,
            'Phone': phone,
            'Password': password,
            'RePassword': repassword
        }

        $.ajax({
            contentType: 'application/x-www-form-urlencoded',
            dataType: 'json',
            type: "POST",
            url: "SignUp",
            data: data,
            success: function (data) {
                if (data.isSuccess == true) {
                    alert(data.message);
                    window.location.replace("/");
                }
                else {
                    alert(data.message);
                }
            },
            error: function (request, status, error) {
                alert("Error");
            }

        });
    }
</script>